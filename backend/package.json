{
  "name": "vistoria-agendamento-backend",
  "version": "1.0.0",
  "description": "Sistema de agendamento de vistorias veiculares - Backend",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "dev:tunnel": "cross-env ENABLE_TUNNEL=true nodemon src/server.js",
    "build": "cd ../frontend && npm install && npm run build",
    "migrate": "node src/migrations/run.js",
    "migrate:postgres": "node src/migrations/run-postgres.js",
    "seed": "node src/migrations/seed.js",
    "setup": "npm run migrate && npm run seed",
    "ensure-admin": "node ensure-admin.js"
  },
  "keywords": [
    "agendamento",
    "vistoria",
    "veicular"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^9.2.2",
    "cors": "^2.8.5",
    "date-fns": "^3.0.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mercadopago": "^2.9.0",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "localtunnel": "^2.0.2",
    "nodemon": "^3.0.2"
  }
}
