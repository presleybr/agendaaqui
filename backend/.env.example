# Server Configuration
PORT=3000
NODE_ENV=development

# Database
DATABASE_PATH=./database/agendamentos.db

# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=sua_chave_secreta_super_segura_aqui_mude_em_producao

# Email Configuration (Configure with your email provider)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=seu_email@gmail.com
EMAIL_PASS=sua_senha_app_email

# Business Configuration
BUSINESS_NAME=Vistoria Veicular Express
BUSINESS_EMAIL=contato@vistoria.com
BUSINESS_PHONE=(11) 99999-9999
BUSINESS_WHATSAPP=5511999999999

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Meta Pixel (Facebook/Instagram)
META_PIXEL_ID=your_pixel_id_here

# Admin User (First Setup)
ADMIN_EMAIL=admin@vistoria.com
ADMIN_PASSWORD=Admin123!@#
ADMIN_NAME=Administrador

# Scheduling Configuration
MIN_ADVANCE_HOURS=2
MAX_ADVANCE_DAYS=30
SLOT_DURATION_MINUTES=60
WORKING_HOURS_START=08:00
WORKING_HOURS_END=18:00
WORKING_DAYS=1,2,3,4,5,6

# Prices (in BRL cents)
# Cautelar: R$ 350,00 = 35000 centavos
PRICE_CAUTELAR=35000
# Transferência: R$ 220,00 = 22000 centavos
PRICE_TRANSFERENCIA=22000
# Outros: R$ 100,00 = 10000 centavos
PRICE_OUTROS=10000

# Mercado Pago Configuration
MP_ACCESS_TOKEN=your_mercadopago_access_token_here
MP_PUBLIC_KEY=your_mercadopago_public_key_here

# LocalTunnel Configuration (for webhooks in development)
# IMPORTANTE: Use um subdomínio fixo para manter a URL do webhook estável
# Recomendado: agendamentos-dev-[seu-nome] (ex: agendamentos-dev-joao)
# A URL final será: https://[seu-subdominio].loca.lt/api/webhook/mercadopago
ENABLE_TUNNEL=true
TUNNEL_SUBDOMAIN=agendamentos-dev
